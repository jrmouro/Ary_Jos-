<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
  <script>

    function set(quiz_key, question_key){

    }

    function question(quiz_key) {

      var quiz_radio = document.getElementById(quiz_key);
      var quiz_div = document.getElementById(quiz_key + "_div");
      const quiz_radios = document.querySelectorAll('input[name="quiz_key"]');


      if (quiz_radio.checked) {
        quiz_div.hidden = false;
        for (const radioButton of quiz_radios) {
          const value = radioButton.value;
          if (value != quiz_key) {
            quiz_div = document.getElementById(value + "_div");
            quiz_div.hidden = true;
          }
        }
      } else {
        quiz_div.hidden = true;
        for (const radioButton of quiz_radios) {
          const value = radioButton.value;
          if (value != quiz_key) {
            quiz_div = document.getElementById(value + "_div");
            quiz_div.hidden = false;
          }
        }
      }

      const question_radios = document.querySelectorAll('input[id="' + quiz_key + '_question"]');

      for (const questionButton of question_radios) {

        questionButton.checked = true;

        break;

      }

    }
  </script>
</head>

<body style="font-family:Verdana;color:#05252c;">

  <div style="background-color:#90b1df;padding:5px;text-align:center;">
    <h2 style="margin: 0px;padding: 0;"><%= title %></h2>
    <p style="font-size:50%;margin: 0px;padding: 0;"><%= wsa %>:<%= wsp %></p>
    <% if (fail_msg != undefined) { %>
    <p style="font-family:Verdana;color:#e10e1c;"> <%= fail_msg%> </p>
    <%}%>
  </div>

  <div  style="overflow:auto;background-color:#90b1df;margin-top:7px;">

    <div class="left" style="background-color:#90b1df">

      <% if (match_key != undefined) { %>
      <h3 style="margin: 0px;padding: 0px;"><a href=<%="/match_edit_form?match_key=" + match_key %> style="text-decoration: none;">&#x1F519;</a> <%= user_matches[match_key].name %></h3>
      <% } %>
      <% if (challenge_key != undefined) { %>
        <h3 style="margin: 0px;padding: 0px;"><a href=<%="/challenge_edit_form?challenge_key=" + challenge_key %> style="text-decoration: none;">&#x1F519;</a> <%= user_challenges[challenge_key].name %></h3>
        <% } %>

      <h4">Rounds</h4>
      <ul>
        <li>
          <Div>
            <% if (match_key != undefined) { %>
            <a href=<%= "/round_register_form?match_key=" + match_key %>> Novo... </a>
            <% } %>
            <% if (challenge_key != undefined) { %>
              <a href=<%= "/round_register_form?challenge_key=" + challenge_key %>> Novo... </a>
              <% } %>
          </Div>
        </li>
        <% if (user_matches != undefined && match_key in user_matches) { %>
        <% for (const round_key in user_matches[match_key].rounds) { %>
        <li>
          <Div>
            <p style="font-size:75%;margin-top: 0.0em ; margin-bottom: 0.0em ;">
              <%= user_matches[match_key].rounds[round_key].question.description %> <a href=<%= "/round_edit_form?match_key=" + match_key + "&round_key=" + round_key %> style="text-decoration: none;"> &#9998 </a>
              <a onclick="return confirm('Tem certeza que deseja deletar esse round?');" href= <%= "/round_delete?match_key=" + match_key + "&round_key=" + round_key %> style="text-decoration: none;"> &#x274C; </a>
            </p>
          </Div>
        </li>
        <% } %>
        <% } %>
        <% if (user_challenges != undefined && challenge_key in user_challenges) { %>
          <% for (const round_key in user_challenges[challenge_key].rounds) { %>
          <li>
            <Div>
              <p style="font-size:75%;margin-top: 0.0em ; margin-bottom: 0.0em ;">
                <%= user_challenges[challenge_key].rounds[round_key].question.description %> <a
                  href=<%= "/round_edit_form?challenge_key=" + challenge_key + "&round_key=" + round_key %>
                  style="text-decoration: none;"> &#9998 </a></p>
            </Div>
          </li>
          <% } %>
          <% } %>
      </ul>
  </div>

  <div class="forms" style="background-color:#90b1df">

    <h3  style="margin: 0px;margin-bottom: 10px;padding: 0px;">Edit Round</h3>
    <form id="round_edit" action="/round_edit" method="get">

      <input id="match_key" name="match_key" type="hidden" value=<%= match_key %>>
      <input id="challenge_key" name="challenge_key" type="hidden" value=<%= challenge_key %>>
      <input id="round_key" name="round_key" type="hidden" value=<%= round_key %>>

      <Div style="text-align: left;">

        <% if (match_key != undefined) { %>

        <label style="margin-top: 5px;" for="quantity1">Tempo para responder ou passar (em segundos)</label>
        <input type="number" id="quantity1" name="quantity1" min="3" max="300"
          value=<%= user_matches[match_key].rounds[round_key].shooting_timeout / 1000%>><br>
        <label for="quantity2">Tempo para responder (em segundos)</label>
        <input type="number" id="quantity2" name="quantity2" min="3" max="300"
          value=<%= user_matches[match_key].rounds[round_key].response_timeout  / 1000%>><br>
        <label for="quantity3">Tempo para passar (em segundos)</label>
        <input type="number" id="quantity3" name="quantity3" min="3" max="300"
          value=<%= user_matches[match_key].rounds[round_key].pass_timeout  / 1000%>><br>
        <label for="quantity4">Pontuação</label>
        <input type="number" id="quantity4" name="quantity4" min="1" max="10"
          value=<%= user_matches[match_key].rounds[round_key].score %>><br>

          <% } %>

          <% if (challenge_key != undefined) { %>

            <label style="margin-top: 5px;" for="quantity1">Wait time to shooting (seconds)</label>
            <input type="number" id="quantity1" name="quantity1" min="3" max="300"
              value=<%= user_challenges[challenge_key].rounds[round_key].shooting_timeout / 1000%>><br>
            <label for="quantity2">Wait time to response (seconds)</label>
            <input type="number" id="quantity2" name="quantity2" min="3" max="300"
              value=<%= user_challenges[challenge_key].rounds[round_key].response_timeout  / 1000%>><br>
            <label for="quantity3">Wait time to pass (seconds)</label>
            <input type="number" id="quantity3" name="quantity3" min="3" max="300"
              value=<%= user_challenges[challenge_key].rounds[round_key].pass_timeout  / 1000%>><br>
            <label for="quantity4">Score</label>
            <input type="number" id="quantity4" name="quantity4" min="1" max="10"
              value=<%= user_challenges[challenge_key].rounds[round_key].score %>><br>
    
              <% } %>

      </Div>

      <Div style="text-align: left;">

        <% if (match_key != undefined) { %>

        <p><%=user_matches[match_key].rounds[round_key].question.description%></p>

        <% } %>

        <% if (challenge_key != undefined) { %>

          <p><%=user_challenges[challenge_key].rounds[round_key].question.description%></p>
  
          <% } %>

        <h6 style="margin-top: 20px;margin-bottom: 0px;  padding: 5px;">(selecione novamente o quiz e a questão, se quiser)</h6>
        <h4 style="margin: 0;padding: 5px;">Quizzes</h4>
        
        <ul style="list-style-type: none; margin: 10px;padding: 0;">
          <% if (user_quizzes != undefined) { %>
          <% 
              var hidden_v = '';
              var checked_v = 'checked';
            %>
          <%for (const key in user_quizzes) { %>
          <li>
            <input onclick=<%="question('"+key+"');"%> type="radio" id=<%= key %> name="quiz_key"
              value=<%= key %>>
            <label for="quiz_key"><%=user_quizzes[key].name%></label><br>
            <p style="font-size:50%;margin-left: 25px;margin-top:0px;padding: 0;"><%=user_quizzes[key].theme%></p>
            <Div id=<%= key + '_div'%> style="text-align: left;" hidden>
              <!-- <h5>Questions</h5> -->
              <ul style="list-style-type: none; margin: 10px;padding: 0;">
                <% for (const question_key in user_quizzes[key].questions) { %>

                <input type="radio" id=<%= key + '_question' %> name="question_key"
                  value=<%= question_key %>>
                <label for="question_key"><%=user_quizzes[key].questions[question_key].description%></label><br>
                <% checked_v = ''; %>
                <% } %>
              </ul>
            </Div>
          </li>

          <% hidden_v = 'hidden';%>

          <% } %>
          <% } %>
        </ul>

      </Div>

      <button id="register_btn" type="submit" style="width:50%; margin: 5px">Editar</button>
    </form>
  </div>

  <div class="left"></div>

  </div>

  <div id="status" style="background-color:#90b1df;text-align:center;padding:5px;margin-top:7px;">
    <% if (user != undefined) { %>
    <p style="margin: 0px;padding: 0;"> <%= user.name %> </p>
    <p style="font-size:50%;margin: 0px;padding: 0;"> <%= user.email %> </p>
    <a href="/user_logout"> Sair </a>
    <%} else { %>
    <a style="margin: 0px;padding: 0;" href="/user_login_form"> Faça login </a>
    <% } %>
  </div>

</body>

</html>